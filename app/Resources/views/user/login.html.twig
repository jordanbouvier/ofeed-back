{% extends 'baseNoReact.html.twig'  %}
{% block body %}

        <div class="columns is-vcentered is-centered full-screen">

            <form class="column is-one-quarter" action="{{ path('login') }}" method="post">
                <div class="field">
                    <label for="username" class="label">Nom d'utilisateur :</label>
                    <div class="control has-icons-left">
                        <span class="icon is-small is-left">
                          <i class="fa fa-user"></i>
                        </span>
                        <input class="input {{ error ? 'is-danger' : '' }}" type="text" id="username" name="_username" value="{{ last_username }}" />

                    </div>

                </div>
                <div class="field">
                    <label for="password" class="label">Mot de passe:</label>
                    <div class="control has-icons-left">
                        <span class="icon is-small is-left">
                          <i class="fa fa-key"></i>
                        </span>
                        <input class="input {{ error ? 'is-danger' : '' }}" type="password" id="password" name="_password" />
                        {% if error %}
                            <p class="help is-danger">Identifiants incorrects</p>
                        {% endif %}
                    </div>
                </div>


                <div class="form-group">
                    <button class="button is-link" type="submit">Se connecter</button>
                </div>
                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >
                <p><a href="{{ path('signup') }}">Vous inscrire ?</a></p>
            </form>

        </div>

{% endblock %}
